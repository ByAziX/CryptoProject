[ ca ]
default_ca = myICA

[ myICA ]
dir = .
new_certs_dir = $dir/newcerts
database = $dir/index
serial = $dir/serial
private_key = $dir/private/intermediateCA.key
certificate = $dir/certs/intermediateCA.crt
default_md = sha256
default_days = 3650
policy = myCA_policy
copy_extensions = copyall

[ myCA_policy ]
commonName = supplied
stateOrProvinceName = optional
countryName = optional
emailAddress = optional
organizationName = optional
organizationalUnitName = optional

[ req ]
default_bits = 2048
default_md = sha256
distinguished_name = req_distinguished_name
req_extensions = req_ext

[ req_distinguished_name ]
countryName            = FR
stateOrProvinceName    = France
localityName           = Toulon
organizationName       = ISEN
organizationalUnitName = ISEN
commonName             = ISEN
emailAddress           = hugo.millet@isen.yncrea.fr


[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = intermediateCA.example.com
IP.1 = 192.168.0.1

[ x509v3_ca ]
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid:always,issuer
basicConstraints = critical, CA:true, pathlen:0
keyUsage = critical, digitalSignature, cRLSign, keyCertSign
